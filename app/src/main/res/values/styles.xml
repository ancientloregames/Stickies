<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.ActionBarTextInput" parent="AppTheme">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="sortAlertItem" parent="@style/TextAppearance.AppCompat.Menu">
		<item name="android:textColor">@color/stickyTitle</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
	</style>

	<style name="noteTitle" parent="@style/TextAppearance.AppCompat.Title">
		<item name="android:textColor">@color/stickyTitle</item>
		<item name="android:textSize">18sp</item>
		<item name="android:paddingTop">16dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">16dp</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="AppTheme.ActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textSize">20sp</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="ActionBarInputLayout">
		<item name="android:textColor">@color/actionBarTextFieldHint</item>
		<item name="android:textSize">16sp</item>
	</style>

</resources>
