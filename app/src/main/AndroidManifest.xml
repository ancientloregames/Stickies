<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.ancientlore.stickies">

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:name="android.support.multidex.MultiDexApplication"
		android:theme="@style/AppTheme">
		<activity android:name=".noteslist.NotesListActivity"
				  android:screenOrientation="portrait"
				  android:configChanges="orientation"
				  android:theme="@style/SplashTheme">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".addeditnote.AddEditNoteActivity"
				  android:label="@string/new_note"
				  android:screenOrientation="portrait"
				  android:configChanges="orientation"
				  android:windowSoftInputMode="stateVisible|adjustResize"/>
		<activity android:name=".notedetail.NoteDetailActivity"
				  android:label="@string/note_details"
				  android:screenOrientation="portrait"
				  android:configChanges="orientation"/>
		<activity android:name=".notice.NoticeActivity"
				  android:label="@string/app_name"/>
		<activity android:name=".topicpicker.TopicPickerActivity"
			android:label="@string/app_name"/>

		<receiver android:name=".notice.AlarmReceiver"/>
		<receiver android:name=".notice.NoticeActionReceiver"
				  android:exported="false">
			<intent-filter>
				<action android:name="com.ancientlore.stickies.action.CANCEL_NOTICE"/>
			</intent-filter>
		</receiver>
	</application>

</manifest>